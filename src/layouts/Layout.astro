---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="white" />
    <meta name="author" content="piapot" />
    <meta name="keywords" content="piapot" />
    <meta name="description" content="Author: piapot, Category: homepage, piapot's personal homepage." />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script is:inline>
      (function () {
        var preferDark = window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
        var theme = localStorage.getItem("theme") || (preferDark ? "dark" : "light");
        var setThemeMode = function (theme) {
          var theme = theme || "light"
          document.documentElement.setAttribute("data-theme", theme);
          localStorage.setItem("theme", theme);
        };
        if (window.matchMedia) {
          window.matchMedia("(prefers-color-scheme: dark)").onchange = function (event) {
            setThemeMode(event.matches ? "dark" : "light");
          };
        }
        setThemeMode(theme);
      })();
    </script>
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        font-family: system-ui, sans-serif;
        -webkit-tap-highlight-color: transparent;
      }
    </style>
  </body>
</html>
