---
import BaseLayout from 'src/layouts/BaseLayout.astro'
---

<BaseLayout title="Piapot | Homepage" description="Piapot's personal Homepage">
  <main class="flex-1 px-4 md:px-12 py-12 bg-white box-border">
    <p class="text-2xl font-bold pb-4">Hey there!👋</p>
    <p class="text-xl">👨‍💻 Front-end developer;</p>
    <p class="text-xl">🌠 Strive to create awesome products;</p>
    <nav class="py-8">
      <ul class="flex flex-row flex-wrap gap-4">
        {
          [
            {
              name: 'GitHub',
              link: 'https://github.com/piapot',
              icon: 'icon-[mdi--github]',
              color: 'hover:bg-gray-800',
            },
            {
              name: 'Email',
              link: 'mailto:paipot.hou@outlook.com',
              icon: 'icon-[mdi--email]',
              color: 'hover:bg-blue-500',
            },
          ].map(item => (
            <li>
              <a href={item.link} target="_blank">
                <button
                  class="flex flex-row justify-center items-center gap-2 border px-4 py-2 rounded-lg hover:text-white active:opacity-60"
                  class:list={[item.color]}
                >
                  <i class="text-xl" class:list={[item.icon]} />
                  <span class="text-md">{item.name}</span>
                </button>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </main>
</BaseLayout>
