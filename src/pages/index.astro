---
import Layout from '@/layouts/BaseLayout.astro'
import Footer from '@/components/Footer.astro'

const header_links: {
  link: string
  name?: string
  icon?: string
  hover?: string
  target?: '_blank' | '_self' | '_parent'
}[] = [
  {
    name: 'GitHub',
    icon: 'i-mdi:github',
    link: 'https://github.com/piapot',
    hover: 'hover:text-white hover:bg-gray-800',
  },
  {
    name: 'Email',
    icon: 'i-mdi:email',
    link: 'mailto:piapot.hou@outlook.com',
    hover: 'hover:text-white hover:bg-blue-500',
  },
  {
    name: 'Blog',
    icon: 'i-mdi:blog',
    link: '/blog',
    hover: 'hover:text-white hover:bg-emerald',
    target: '_self',
  },
]
const projects: { icon: string; name: string; desc?: string; icon_color?: string }[] = []
---

<Layout title="Piapot">
  <header class="flex flex-col h-screen px-5 gap-2 transition-all" sm="px-10" md="px-15" lg="px-20">
    <h1 class="flex flex-col pt-32 pb-8 text-5xl font-bold gap-2">
      <span>Hello,ðŸ‘‹</span>
      <span>I'm Piapot.</span>
    </h1>
    <p class="text-2xl">Front-end developer.</p>
    <p class="text-2xl">Strive to create awesome and great products!</p>
    <ul class="flex flex-row flex-wrap py-4 gap-4">
      {
        header_links.map(item => (
          <li class:list={[item.hover, 'flex flex-center px-3 py-1 text-gray-800 bg-gray-50 rounded']}>
            <a href={item.link} target={item.target || '_blank'} class="flex flex-center gap-2">
              {item.icon && <i class:list={[item.icon, 'text-2xl']} />}
              {item.name && <span class="leading-loose">{item.name}</span>}
            </a>
          </li>
        ))
      }
    </ul>
  </header>
  <main class="px-5 transition-all" sm="px-10" md="px-15" lg="px-20">
    {
      projects.length !== 0 && (
        <article id="projects" class="py-8">
          <h2 class="flex flex-row py-4 text-3xl font-bold justify-between items-center">
            <a href="#projects">Projects</a>
            <a href="/">
              <i class="i-mdi:chevron-right flex flex-center" />
            </a>
          </h2>
          <div class="grid gap-4 grid-cols-1" md="grid-cols-2">
            {projects.map(item => (
              <a href="/">
                <section class="flex flex-row px-4 py-2 rounded bg-gray-50 hover:bg-gray-100 justify-between gap-2">
                  <i class:list={[item.icon, item.icon_color, 'text-5xl']} />
                  <div class="flex flex-col flex-1 justify-center">
                    <h3 class="text-xl text-gray-800">{item.name}</h3>
                    {item.desc && <p class="text-gray-500">{item.desc}</p>}
                  </div>
                </section>
              </a>
            ))}
          </div>
        </article>
      )
    }
  </main>
  <Footer />
</Layout>
